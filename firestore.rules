rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: read/write own document only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rooms: read for anyone (room code = doc ID), write for authenticated users
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null;
      match /members/{memberId} {
        allow read, write: if request.auth != null;
      }
    }

    // Boards (notes, cursors): read/write for authenticated users
    match /boards/{boardId} {
      allow read, write: if request.auth != null;
      match /{subcollection=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Chores, calendars, budgets: read/write for authenticated users
    match /chores/{choresId} {
      allow read, write: if request.auth != null;
      match /{subcollection=**} {
        allow read, write: if request.auth != null;
      }
    }
    match /calendars/{calendarId} {
      allow read, write: if request.auth != null;
      match /{subcollection=**} {
        allow read, write: if request.auth != null;
      }
    }
    match /budgets/{budgetId} {
      allow read, write: if request.auth != null;
      match /{subcollection=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
